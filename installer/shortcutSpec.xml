<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="Meteor" location="startMenu"/>
	<shortcut
		name="Meteor Server"
		target="$INSTALL_PATH\Meteor.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start Meteor server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no"
		runAsAdministrator="true">
	</shortcut>	
	<shortcut
		name="Meteor Wallet"
		target="http://localhost:64444/index.html"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Launch Meteor wallet in browser"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no">
	</shortcut>	
</shortcuts>